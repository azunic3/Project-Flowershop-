            <div class="form-group">
                <label asp-for="DiscountID" class="control-label"></label>
                <input asp-for="DiscountID" class="form-control" />
                <span asp-validation-for="DiscountID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayedAmount" class="control-label"></label>
                <input asp-for="PayedAmount" class="form-control" />
                <span asp-validation-for="PayedAmount" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="DeliveryAddress" class="control-label"></label>
                <input asp-for="DeliveryAddress" class="form-control" />
                <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

